# Environment Configuration for Kerberos Protocol Implementation
# Author: Devesh Kumar

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
FLASK_ENV=development

# Database Configuration
DATABASE_URL=sqlite:///kerberos.db

# Kerberos Configuration
KERBEROS_SECRET=kerberos-secret-key-change-in-production
CRYPTO_SALT=kerberos-salt-change-in-production
CRYPTO_PASSWORD=kerberos-password-change-in-production

# Claude AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east1-aws
PINECONE_INDEX_NAME=kerberos-users

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=kerberos.log

# Security Configuration
SESSION_TIMEOUT=28800  # 8 hours in seconds
TOKEN_EXPIRY=28800     # 8 hours in seconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800  # 30 minutes in seconds

# AI Configuration
AI_THREAT_THRESHOLD=0.7
AI_CONFIDENCE_THRESHOLD=0.8

# Development Settings (disable in production)
DEBUG=True
TESTING=False
